name: Deploy via Wrangler

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      # If you have a build step, run it here (npm ci && npm run build)
      # For raw HTML in /site there is no build.

      - name: Install wrangler
        run: npm install -g wrangler

      - name: Deploy to Cloudflare Pages
        run: wrangler pages deploy site --project-name=your-pages-project-name
        env:
          CLOUDFLARE_API_TOKEN: xzpXi_EpdXbFq7J63oPJODeX3rn2PdyeoxS-gug4
          CLOUDFLARE_ACCOUNT_ID: e834df1f82318fed6a51403d8ff01614
